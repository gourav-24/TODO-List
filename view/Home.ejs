<html>
    <title>
        <%= title %>
    </title>
    <head>
        <link rel="stylesheet" href="./home.css">
        
 
    </head>
    <body>
        <%- include('_header'); -%>
        <!-- <img src="../assets/beach-palm-trees-maldiveshand.jpg"> -->

    

        <div id="container">
            
                <% for(task of tasks){  %>

                
                    <div class= "flex-item">
                        <div id="Content">
                            <h3><%= task.content %></h3>
                        </div>
                        <div id="DeadLine">
                            By: <%= task.deadLine %>
                    
                        </div>
                        <div id="Done">
                            <a  href="/destroy/<%= task.id %>">
                                <span style='font-size:50px; color: black;'>&#8594;</span>
                            </a>
                        </div>

                    </div>
                    
                <% } %>
            
        </div>

        <div class="add-todo">
            <a  href="/form"><h1>+</h1></a>
            


        </div>
        <%- include('_footer') -%>


        
        <script src="../configuration/Home.js"></script>

    </body>
</html>