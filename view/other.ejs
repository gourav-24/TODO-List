<html>
    <title>
        <%= title %>
    </title>
    <head>
        <link rel="stylesheet" href="./other.css">
        
 
    </head>
    <body>
        <%- include('_header'); -%>

        <div id="container">
            
                <% for(task of tasks){  %>
                
                    <div class= "flex-item">
                        <div id="Content">
                            <h3><%= task.content %></h3>
                        </div>
                        <div id="DeadLine">
                            By: <%= task.deadLine %>
                    
                        </div>
                        <div id="Done">
                            <a style="text-decoration: none;" href="/destroy/<%= task.id %>">
                                <span style='font-size:50px; color: black;'>&#8594;</span>
                            </a>
                        </div>

                    </div>
                    
                <% } %>
            
        </div>
        
        <%- include('_footer') -%>


        
    </body>
</html>